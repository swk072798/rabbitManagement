<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nwafu.databaseoprations.dao.RabbitHouseBasicInfoMapper">
	<resultMap id="BaseResultMap" type="com.nwafu.databaseoprations.entity.RabbitHouseBasicInfo">
		<result column="rabbitHouseNo" jdbcType="VARCHAR" property="rabbitHouseNo"/>
		<result column="rabbitHouseType" jdbcType="VARCHAR" property="rabbitHouseType"/>
		<result column="principal" jdbcType="VARCHAR" property="principal"/>
		<result column="farmUuid" jdbcType="VARCHAR" property="farmUuid"/>
	</resultMap>
	<insert id="insert" parameterType="java.util.List">
		insert into rabbit_house_basic_info(rabbitHouseNo,rabbitHouseType,principal,farmUuid) values
		<foreach collection="list" index="index" item="item" separator=",">
		(	#{item.rabbitHouseNo,jdbcType=VARCHAR},
			#{item.rabbitHouseType,jdbcType=VARCHAR},
			#{item.principal,jdbcType=VARCHAR},
			#{item.farmUuid,jdbcType=VARCHAR}
		)</foreach>
	</insert>

	<select id="selectAllInfo" resultMap="BaseResultMap">
		select * from rabbit_house_basic_info
	</select>

	<select id="selectInfoByCondition" parameterType="java.lang.String" resultMap="BaseResultMap">
		select * from  rabbit_house_basic_info where ${condition}=#{value}
	</select>

	<delete id="deleteById" parameterType="java.util.List">
		delete from rabbit_house_basic_info where rabbitHouseNo in
		<foreach close=")" collection="list" item="item" open="(" separator=",">
			#{item}
		</foreach>
	</delete>

	<select id="getRabbitHouseNo" resultType="java.lang.String" parameterType="java.lang.String">
    	select rabbitHouseNo from rabbit_house_basic_info where farmUuid=#{farmUUid}
  	</select>
</mapper>
